<%= render 'shared/authentication' %>

<% if current_user %>

  <div class="row">
    <div class="col-sm-1">
      <%= 
          link_to "dislike", 
          {controller: "cards", action: "add_vote", id: @card, vote: 'dislike'},
          class: 'btn btn-danger left-btn'
      %>

      <%= 
          link_to "like",
          {controller: "cards", action: "add_vote", id: @card, vote: 'like'},
          class: 'btn btn-success right-btn'
      %>
    </div>
  </div>

  <hr>

  <div class="row">

    <div class="col-md-1">
      <%= link_to "dislike", controller: "cards", action: "add_vote", id: @card, vote: 'dislike' %>
    </div>

    <div class="col-md-3">
      <% if @card.animated == true %>

        <%= link_to(@card) do %>
          <%=  image_tag(@card.link, class: 'img-thumb', width: 160, height: 160) %>
        <% end %>

      <% else %>
        <%= link_to(image_tag("http://i.imgur.com/#{@card.remote_id}b.#{RemoteResource.content_type(@card.content_type)}", class: 'img-thumb'), @card) %>
      <% end %>
    </div>

    <div class="col-md-1">
      <%= link_to "like", controller: "cards", action: "add_vote", id: @card, vote: 'like' %>
    </div>

  </div>
<% end %>
