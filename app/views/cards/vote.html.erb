<div class="row">
  <% if current_user %>
    <p>Using tagsurf as: <%= current_user.username %></p>
    <small><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></small>
  <% else %>
    <h3><%= link_to "Sign in with Imgur", user_omniauth_authorize_path(:imgur) %></h3>
  <% end %>
</div>

<hr>

<% if current_user %>
  <div class="row">

    <div class="col-md-1">
      <%= link_to "dislike", controller: "cards", action: "add_vote", id: @card, vote: 'dislike' %>
    </div>

    <div class="col-md-3">
      <% if @card.animated == true %>
        <%= image_tag @card.link, class: 'img-thumb', width: 160, height: 160 %>
      <% else %>
        <%= image_tag "http://i.imgur.com/#{@card.remote_id}b.#{RemoteResource.content_type(@card.content_type)}", class: 'img-thumb' %>
      <% end %>
    </div>

    <div class="col-md-1">
      <%= link_to "like", controller: "cards", action: "add_vote", id: @card, vote: 'like' %>
    </div>

  </div>
<% end %>
