<%= render 'shared/authentication' %>

<% if current_user %>

  <div class="row spaced">
    <div class="col-md-10" id="swiper">

      <div class="card-container clearfix" id="current">
        <div class="img-container full">
          <% if @card.animated == true %>
              <%= image_tag(@card.link) %>
          <% else %>
              <%= 
                image_tag( "http://i.imgur.com/#{@card.remote_id}.#{RemoteResource.content_type(@card.content_type)}")
              %>
          <% end %>
        </div>
            
        <div class="txt-container"> 
          <%= @card.title %>
        </div> 
      </div> 

      <div class="card-container clearfix" id="next">
        <div class="img-container full">
          <% if @card.animated == true %>
              <%= image_tag(@card.link) %>
          <% else %>
              <%= 
                image_tag( "http://i.imgur.com/#{@card.remote_id}.#{RemoteResource.content_type(@card.content_type)}")
              %>
          <% end %>
        </div>
            
        <div class="txt-container"> 
          <%= @card.title %>
        </div> 
      </div>

    </div>
  </div>

          <div class="info"></div> 
  <%= render 'shared/voting', object: @card %>

<% end %>
