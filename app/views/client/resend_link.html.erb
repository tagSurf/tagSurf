<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/beta.css">
<div class="centered">
 <div class="logobar">
  <img src="/img/ts_icon_grey_152.png">
  <img src="/img/logo.png">
 </div>
 <div class="bigger">
  <div class="midpad">
   Please verify your email account to complete your beta registration.
  </div>
  <div class="midpad">
   A verification link has been sent to:
  </div>
  <div class="midpad">
   <%= current_user.email %>
  </div>
 </div>
 <div class="biggest bottom">

  <%= form_for(User.new, :as => :user, :url => confirmation_path(:user), :html => { :method => :post }) do |f| %>
    <%= f.hidden_field :email, value: current_user.email %>
    <%= f.submit "Resend link", class: 'button' %>
  <% end %>

 </div>
</div>
