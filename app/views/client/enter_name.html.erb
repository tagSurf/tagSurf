<%= stylesheet_link_tag "sessions", :media => "all" %>

<%= form_for(@user, :url => user_path(@user), :remote => false, :html => {:method => 'put', :role => 'form', :id => 'name_form'}) do |f| %>
  <center>
   <div class="tslogo"></div>
   <div class="ac-text-container">
    <p>Help your friends find you! <br/>Tell us your name.</p>
   </div>
  <div>
    <div class="input-border-container" style="margin-bottom:10px;"><%= f.text_field :first_name, placeholder: "first name", autocomplete: "off", spellcheck: "false", autocapitalize: "on", autocorrect: "off", class: 'ts-input' %></div>
    <div class="input-border-container" style="margin-bottom:10px;"><%= f.text_field :last_name, placeholder: "last name", autocomplete: "off", spellcheck: "false", autocapitalize: "on", autocorrect: "off", class: 'ts-input' %></div> 
  </div>

  <%= f.submit "Submit", id: "submit-btn", class: "button input-width", style: "margin-top:5px; font-size: 120%; font-weight: 300;" %>

  </center>
<% end %>

<%= javascript_include_tag "sessions" %>
<script type="text/javascript">
  var inputs = document.getElementsByClassName("ts-input");
  stroke.listen("up", "13", function() {
    f.submit();
  });
  fadeInBody();
  inputs[0].onfocus = function () { toggleClass.apply(inputs[0].parentNode, ["focused"]); };
  inputs[0].onblur = function () { toggleClass.apply(inputs[0].parentNode, ["focused"]); };
  inputs[1].onfocus = function () { toggleClass.apply(inputs[1].parentNode, ["focused"]); };
  inputs[1].onblur = function () { toggleClass.apply(inputs[1].parentNode, ["focused"]); };
</script>