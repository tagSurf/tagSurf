<% content_for :title do %>
  <title>tagSurf</title>
<% end %>

<%= stylesheet_link_tag "sessions", :media => "all" %>

<%= form_for(resource, :as => resource_name, :url => password_path(:user), :method => :put, :html => {:role => 'form'} ) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <center>
    <div class="tslogo"></div>
    <div class="input-border-container" style="margin-bottom:10px;"><%= f.password_field :password, placeholder: 'password', class: 'su-input' %></div>
    <div class="input-border-container" style="margin-bottom:10px;"><%= f.password_field :password_confirmation, placeholder: 'password confirmation', class: 'su-input' %></div>
    <%= f.submit "Change password", class: 'button input-width' %>
  </center>
<% end %>

<div class="registration-links-container">
  <%= link_to "Sign in", new_session_path(:user), class: 'float-left twelve light-gray regs-link' %>  
</div>

<%= javascript_include_tag "sessions" %>

<script>
var inputs = document.getElementsByClassName("ts-input");
inputs[0].onfocus = function () { toggleClass.apply(inputs[0].parentNode, ["focused"]); };
inputs[0].onblur = function () { toggleClass.apply(inputs[0].parentNode, ["focused"]); };
inputs[1].onfocus = function () { toggleClass.apply(inputs[1].parentNode, ["focused"]); };
inputs[1].onblur = function () { toggleClass.apply(inputs[1].parentNode, ["focused"]); };
</script>
