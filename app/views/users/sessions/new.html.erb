<% content_for :title do %>
  <title>tagSurf</title>
<% end %>

<%= stylesheet_link_tag "sessions", :media => "all" %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form'} ) do |f| %>
  <center>
    <div class="tslogo"></div>
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
    <div class="input-border-container" style="margin-bottom:10px;"><%= f.email_field :email, :placeholder => 'email', :class => 'ts-input' %></div>
    <div class="input-border-container"><%= f.password_field :password, :placeholder => 'password', :class => 'ts-input' %></div>
    <div class="input-checkbox light-gray"><%= f.check_box :remember_me, { :checked => "checked" } %> <%= f.label :remember_me %></div>
  </center>
  <div class="ts-submit-bar">
    <div class="ts-submit-left border-trim">
      <%= f.submit "login", id: "ts-login-btn" %> 
    </div>
    <div class="ts-submit-right">
      <a class="ts-signup-btn" href="/sign-up">sign up</a>
    </div>
  </div>
<% end %>
<%= link_to 'Forgot password?', new_password_path(:user), class: 'forgot-password twelve light-gray' %>
<%= javascript_include_tag "sessions" %>
<script type="text/javascript">
  var f = document.getElementById("new_user"),
      inputs = document.getElementsByClassName("ts-input");
  if(isUIWebView())
    addCss({
      "#new_user": function() {
            return "margin-top: 40px;";
          }
    });
  stroke.listen("up", "13", function() {
    f.submit();
  });
  fadeInBody();
  inputs[0].onfocus = function () { toggleClass.apply(inputs[0].parentNode, ["focused"]); };
  inputs[0].onblur = function () { toggleClass.apply(inputs[0].parentNode, ["focused"]); };
  inputs[1].onfocus = function () { toggleClass.apply(inputs[1].parentNode, ["focused"]); };
  inputs[1].onblur = function () { toggleClass.apply(inputs[1].parentNode, ["focused"]); };
</script>
