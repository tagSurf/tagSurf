<% content_for :title do %>
  <title>tagSurf</title>
<% end %>

<%= stylesheet_link_tag "sessions", :media => "all" %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name) ) do |f| %>
  <center>
    <img id="tslogo" src="http://assets.tagsurf.co/img/ts_logo_stacked_gray.jpg"></img>
    <%#= f.email_field :email, :placeholder => 'email', :class => 'ts-input', :disabled => true %>
    <%#= f.password_field :password, :placeholder => 'password', :class => 'ts-input', :disabled => true %>
    <%#= f.password_field :password_confirmation, :placeholder => 'confirm password', :class => 'ts-input', :disabled => true %>
    <p>tagSurf is in private beta.</p>
    <p>Please email <%= mail_to 'beta@tagSurf.co', nil, class: 'ts-blue' %> for more information.</p>
    <%= link_to 'Log in', user_session_path, class: 'ts-blue' %>
  </center>
<% end %>
